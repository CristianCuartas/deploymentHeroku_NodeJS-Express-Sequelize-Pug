extends ../layout/index
block contenido
    main.container.mt-5 
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12
                include ../layout/partials/testimoniales 
            .col-md-12
                h2.text-center Agrega un testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-grop
                                label(for="") Nombre
                                input(id="nombre", class="form-control" type="text", placeholder="Tu nombre", name="nombre", value=nombre)
                            .form-grop
                                label(for="") Correo Electrónico
                                input(id="correo", class="form-control" type="email", placeholder="Tu correo electrónico", name="correo",  value=correo)
                            .form-grop
                                label(for="") Mensaje
                                textarea#mensaje(name="mensaje", class="form-control", rows="3", placeholder="Tu mensaje")=mensaje
                            br
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")

                            